class Solution {
    public long flowerGame(int n, int m) {
        long oddN = (n + 1) / 2;   // count of odd numbers from 1..n
        long evenN = n / 2;        // count of even numbers from 1..n
        long oddM = (m + 1) / 2;   // count of odd numbers from 1..m
        long evenM = m / 2;        // count of even numbers from 1..m
        
        return oddN * evenM + evenN * oddM;
    }
}
