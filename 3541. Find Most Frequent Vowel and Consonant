class Solution {
    public int maxFreqSum(String s) {
        int[] count = new int[26];
        // count frequencies
        for (char c : s.toCharArray()) {
            count[c - 'a']++;
        }
        
        int maxVowel = 0;
        int maxConsonant = 0;
        for (int i = 0; i < 26; i++) {
            char c = (char) ('a' + i);
            int freq = count[i];
            if (isVowel(c)) {
                if (freq > maxVowel) {
                    maxVowel = freq;
                }
            } else {
                if (freq > maxConsonant) {
                    maxConsonant = freq;
                }
            }
        }
        return maxVowel + maxConsonant;
    }
    
    // helper to check if a character is a vowel
    private boolean isVowel(char c) {
        return c == 'a' || c == 'e' || c == 'i' || c == 'o' || c == 'u';
    }
}
